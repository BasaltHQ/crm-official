    "template": {
      "containers": [
        {
          "name": "ledger1-gateway",
          "image": "ledger1acr.azurecr.io/azure-realtime-gateway:20251118125119",
          "env": [
            { "name": "PORT", "value": "8080" },
            { "name": "LOG_LEVEL", "value": "info" },
            { "name": "AZURE_OPENAI_REALTIME_WS_URL", "value": "wss://skyne-m9q617jz-swedencentral.cognitiveservices.azure.com/openai/deployments/gpt-realtime/realtime" },
