# Azure Realtime Gateway (.env)
# Copy to .env and fill secrets. Values below reflect your current app settings where applicable.

# Server
PORT=8080
LOG_LEVEL=info
GATEWAY_SHARED_SECRET=changeme
ORIGIN_ALLOWLIST=

# Audio I/O between Voice Connector consumer <-> Gateway <-> Azure
# VC side defaults
AUDIO_ENCODING=mulaw
SAMPLE_RATE=8000

# Azure side format preferences (gateway will resample/convert)
AZURE_IN_ENCODING=pcm16
AZURE_IN_SAMPLE_RATE=16000
AZURE_OUT_ENCODING=pcm16
AZURE_OUT_SAMPLE_RATE=16000

# Azure OpenAI Realtime (server-to-server WebSocket)
# If you use the preview regional endpoint, keep it aligned with your WebRTC client region
AZURE_OPENAI_REALTIME_WS_URL=wss://eastus2.realtimeapi-preview.ai.azure.com/v1/realtime
AZURE_OPENAI_REALTIME_API_VERSION=2025-04-01-preview
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-realtime
AZURE_OPENAI_API_KEY=

# Optional: standard Azure OpenAI REST endpoint (not used by this gateway directly)
AZURE_OPENAI_ENDPOINT=https://panopticon.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-5
